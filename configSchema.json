{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "disableDashboardControl": {
            "type": "boolean",
            "default": false
        },
        "tickRateMs": {
            "type": "number",
            "minimum": 1,
            "default": 100
        },
        "countdown": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "offsetSeconds": {
                    "type": "number",
                    "default": 60
                }
            }
        }
    }
}